
<h2>Add a new event</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.name class="form-control" placeholder="The name of the event"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Building</label>
        <div class="col-sm-10">
            {{input type="text" value=model.building class="form-control" placeholder="The building of the Library"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Room Number</label>
        <div class="col-sm-10">
            {{input type="text" value=model.roomNumber class="form-control" placeholder="The room number of the Library"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Categories</label>
        <div class="col-sm-10">
            {{input type="text" value=model.roomNumber class="form-control" placeholder="The phone number of the Library"}}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveEvent' model}}>Create!</button>
        </div>
    </div>
</div>